# ---------------------------------
# Queries
# ---------------------------------

type Query {
    riverById(id:ID) : River
    riverByName(name:String) : River
    riversByLocation(latitude:Float, longitude:Float, radius:Float): [River]
    riversByPlace(placeName:String, radius:Float) : [River]
    searchFromPattern(pattern:String): [Search]
}

# ---------------------------------
# Model objects
# ---------------------------------

type River {
    id: ID
    name: String
    level: Float
    difficulty: Int
    latitude: Float
    longitude: Float
}

type Search {
    name: String
    type: String
}

type Place {
    name: String
    latitude: Float
    longitude: Float
}